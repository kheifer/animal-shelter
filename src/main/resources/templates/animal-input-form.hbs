{{#partial "content"}}

    {{#if editAnimal}}
        <h3>Update {{editAnimal.animalName}}:</h3>
        <form action="/animals/{{editAnimal.id}}/update" method="post">
            <div class="form-group">
                <label for="name">Animal Name:</label>
                <input id="name" name="name" class="form-control" value="{{editAnimal.animalName}}" type="text" required>
            </div>
            <div class="form-group">
                <label for="gender">Animal Gender:</label>
                <input id="gender" name="gender" class="form-control" value="{{editAnimal.gender}}"type="text" required>
            </div>
            <div class="form-group">
                <label for="type">Animal Type:</label>
                <input id="type" name="type" class="form-control" value="{{editAnimal.type}}"type="text" required>
            </div>
            <div class="form-group">
                <label for="breed">Breed:</label>
                <input id="breed" name="breed" class="form-control" value="{{editAnimal.breed}}"type="text" required>
            </div>
    {{else}}
            <h1>Add a new Animal!</h1>

        <form action="/animals/new" method="post">
            <div class="form-group">
                <label for="name">Animal Name:</label>
                <input id="name" name="name" class="form-control" type="text" required>
            </div>
            <div class="form-group">
                <label for="gender">Animal Gender:</label>
                <input id="gender" name="gender" class="form-control" type="text" required>
            </div>
            <div class="form-group">
                <label for="type">Animal Type:</label>
                <input id="type" name="type" class="form-control" type="text" required>
            </div>
            <div class="form-group">
                <label for="breed">Breed:</label>
                <input id="breed" name="breed" class="form-control" type="text" required>
            </div>
    {{/if}}
        <button type="submit" class="btn btn-success">Submit Animal!</button>
    </form>

{{/partial}}

{{> layout.hbs}}